contract Counter {
  var value: Int = 0
  // invariant (forall (c:Counter, e:External, m:Int) :: (value = m && next(numWrites = m + 1) ==> e.Calls(c.increment())))

}

Counter :: (any) {
  public init() {}

  public func getValue() -> Int
  post (returns(value))
  {
    return value
  }

  public func increment()
    mutates (value)
    post (value == prev(value) + 1)
  {
    value += 1
  }

  public func set(value: Int)
    mutates (value)
    post (value == value)
  {
    self.value = value
  }
}
