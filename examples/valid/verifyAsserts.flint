contract VerifyAsserts  {
  var ten: Int = 10
}

VerifyAsserts :: (any) {
  public init() {}

  func testAssert1() {
    assert (1 == 1)
    var i: Int = 10
    let j: Int = 20
    i += 5
    i += 5
    assert (i == j)
  }

  func testAssert2() {
    assert (1 == 1)
  }

  func testIfStatementAssert(i: Int) {
    if i > 0 {
      assert (i >= 1)
    } else {
      assert (i <= 0)
    }
  }

  func failingAssertion(j: Int) {
    assert (j == 0)
  }

//  func testGlobals() {
