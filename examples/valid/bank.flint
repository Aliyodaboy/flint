contract Bank {
  var manager: Address
  var accounts: [Address: Int]
}

Bank :: (any) {
  public mutating func deposit(account: Address, amount: Int) {
    accounts[account] = accounts[account] + amount
  }

  public func getBalance(account: Address) -> Int {
    return accounts[account]
  }

  public mutating func setManager(manager: Address) {
    self.manager = manager
  }
}

Bank :: (manager) {
  public mutating func clear(account: Int) {
    accounts[account] = 0
  }
}
